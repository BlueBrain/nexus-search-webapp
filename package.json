{
  "name": "nexus-search-webapp",
  "description": "Service which allows you to search Nexus platform",
  "version": "0.0.1",
  "author": "Blue Brain Nexus",
  "license": "Apache-2.0",
  "main": "index.js",
  "repository": "github:bluebrain/nexus-explorer",
  "homepage": "https://github.com/BlueBrain/nexus-search-webapp#readme",
  "scripts": {
    "build": "export NODE_ENV=production && babel server -d dist/server --presets env && parcel build public/index.pug --public-url ./ --out-dir dist/public && envsub --env npm_package_version dist/public/index.html",
    "build-docker:client": "npm run build && docker build -f docker/client/Dockerfile -t ${npm_package_name}-client .",
    "build-docker:server": "npm run build && docker build -f docker/server/Dockerfile -t ${npm_package_name}-server .",
    "dev": "export NODE_ENV=development && ( babel-watch server/index.js --presets env --watch server/index.js & $(babel-node dotenv.js) && parcel public/index.pug -p 8000 --no-cache )",
    "start": "babel-node server/index.js --presets env & parcel public/index.pug -p 8000",
    "start-docker": "docker run --rm -p 8000:8000 ${npm_package_name}",
    "dotenv": "export NODE_ENV=development && node_modules/.bin/babel-node dotenv.js",
    "mapping": "export NODE_ENV=development && node_modules/.bin/babel-node examples/generateMapping.js",
    "mocking": "export NODE_ENV=development && node_modules/.bin/babel-node examples/generateMockData.js",
    "populate": "export NODE_ENV=development && node_modules/.bin/babel-node examples/populateIndex.js",
    "serve": "node dist/index.js",
    "test": "jest",
    "test-watch": "jest --watch",
    "lint": "eslint ."
  },
  "dependencies": {
    "@bbp/nexus-js-helpers": "^0.4.3",
    "@bbp/nexus-react": "^0.0.8",
    "@tweenjs/tween.js": "^17.2.0",
    "antd": "^3.6.6",
    "boxen": "^1.3.0",
    "chalk": "^2.4.1",
    "chroma-js": "^1.3.7",
    "components": "^0.1.0",
    "cors": "^2.8.4",
    "distinct-colors": "^1.0.4",
    "elasticsearch": "^15.1.1",
    "event-emitter": "^0.3.5",
    "express": "^4.16.3",
    "express-http-proxy": "^1.2.0",
    "gsap": "^2.0.1",
    "history": "^4.7.2",
    "moment": "^2.22.2",
    "morgan": "^1.9.0",
    "pretty-bytes": "^5.1.0",
    "querystring": "^0.2.0",
    "react": "^16.4.1",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.4.1",
    "react-fontawesome": "^1.6.1",
    "react-json-view": "^1.19.0",
    "react-motion": "^0.5.2",
    "react-paginate": "^5.2.3",
    "react-redux": "^5.0.7",
    "react-responsive-modal": "^3.1.0",
    "react-router": "^4.3.1",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-svg": "^4.1.6",
    "react-tabs": "^2.2.2",
    "react-tooltip": "^3.6.1",
    "redux": "^4.0.0",
    "redux-localstorage": "^0.4.1",
    "redux-thunk": "^2.3.0",
    "store": "^2.0.12",
    "styled-jss": "^2.2.3",
    "three": "^0.86.0",
    "three-trackballcontrols": "0.0.7",
    "underscore": "^1.9.1",
    "underscore.get": "^0.2.9"
  },
  "devDependencies": {
    "@types/jest": "^23.1.5",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react-app": "^3.1.2",
    "babel-watch": "^2.0.7",
    "dotenv": "^6.0.0",
    "envsub": "^3.1.0",
    "eslint": "^5.1.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-react": "^7.10.0",
    "jest": "^23.3.0",
    "node-sass": "^4.9.2",
    "parcel-bundler": "^1.9.4",
    "prop-types": "^15.6.2",
    "pug": "^2.0.3",
    "ts-jest": "^23.0.0",
    "typescript-babel-jest": "^1.0.5"
  },
  "jest": {
    "collectCoverage": false
  }
}
