{
  "name": "nexus-search",
  "description": "Service which allows you to search Nexus platform",
  "version": "0.0.1",
  "author": "Blue Brain Nexus",
  "license": "Apache-2.0",
  "main": "index.js",
  "repository": "github:bluebrain/nexus-explorer",
  "homepage": "https://github.com/BlueBrain/nexus-search-webapp#readme",
  "scripts": {
    "build": "parcel build public/index.html --public-url ./ && envsub --env npm_package_version dist/index.html",
    "build-docker": "npm run build && docker build -f docker/Dockerfile -t ${npm_package_name} .",
    "dev": "babel-watch server/index.js --presets env --watch server/index.js & parcel public/index.html -p 8000",
    "start": "babel-node server/index.js --presets env & parcel public/index.html -p 8000",
    "start-docker": "docker run --rm -p 8000:8000 ${npm_package_name}",
    "test": "jest",
    "test-watch": "jest --watch",
    "lint": "eslint ."
  },
  "dependencies": {
    "@bbp/nexus-js-helpers": "^0.4.3",
    "@bbp/nexus-react": "^0.0.6",
    "antd": "^3.5.3",
    "chroma-js": "^1.3.7",
    "cors": "^2.8.4",
    "distinct-colors": "^1.0.4",
    "elasticsearch": "^14.2.2",
    "express": "^4.16.3",
    "express-http-proxy": "^1.2.0",
    "history": "^4.7.2",
    "moment": "^2.22.1",
    "pretty-bytes": "^4.0.2",
    "querystring": "^0.2.0",
    "react": "^16.3.2",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.3.2",
    "react-fontawesome": "^1.6.1",
    "react-json-view": "^1.16.6",
    "react-motion": "^0.5.2",
    "react-paginate": "^5.2.3",
    "react-redux": "^5.0.7",
    "react-responsive-modal": "^2.0.1",
    "react-router": "^4.2.0",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-svg": "^4.0.2",
    "react-tabs": "^2.2.2",
    "react-tooltip": "^3.6.0",
    "redux": "^3.7.2",
    "redux-localstorage": "^0.4.1",
    "redux-thunk": "2.2.0",
    "store": "^2.0.12",
    "styled-jss": "^2.2.3",
    "underscore": "^1.9.0"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react-app": "^3.1.1",
    "babel-watch": "^2.0.7",
    "dotenv": "^5.0.1",
    "envsub": "^3.1.0",
    "eslint": "^4.19.1",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-react": "^7.8.2",
    "jest": "^23.1.0",
    "parcel-bundler": "^1.8.1",
    "ts-jest": "^22.4.6",
    "typescript-babel-jest": "^1.0.5"
  },
  "jest": {
    "collectCoverage": false
  }
}
